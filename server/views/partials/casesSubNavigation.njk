{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}

{{ mojSubNavigation({
    label: "Sub navigation",
    attributes: {
      "data-qa": "cases-sub-navigation"
    },
    items: [{
      text: "Overview",
      href: "/cases/" + id + "/overview",
      active: activeTab == "overview"
    }, {
      text: "Location activity",
      href: "/cases/" + id + "/location-activity",
      active: activeTab == "location-activity"
    }, {
      text: "Curfew activity",
      href: "/cases/" + id + "/curfew",
      active: activeTab == "curfew"
    }, {
      text: "Case notes",
      href: "/cases/" + id + "/notes",
      active: activeTab == "notes"
    }]
  }) }}